{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"jsx": "preserve",
		"allowJs": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"components": ["./components"],
			"static": ["./static"]
		},
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"lib": ["dom", "es2016"]
	},
	"exclude": ["*.config.js", "*.js"],
	"rules": { "no-use-before-declare": false }
}
